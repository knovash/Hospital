<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <File name="File" fileName="log/Log.log">
            <PatternLayout pattern="File: %d{HH:mm} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="Con: %d{HH:mm} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>


    <Loggers>

        <Logger name="root.Main" level="debug" additivity="true">
            <AppenderRef ref="File"/>
        </Logger>

        <Logger name="root.utils.HospitalUtils" level="info" additivity="true">
            <AppenderRef ref="File"/>
        </Logger>

        <Logger name="root.utils.Test" level="info" additivity="true">
            <AppenderRef ref="File"/>
        </Logger>

        <Logger name="root.utils.doctor.Surgeon" level="info" additivity="true">
            <AppenderRef ref="File"/>
        </Logger>

        <Logger name="root.human.patient.Patient" level="debug" additivity="true">
            <AppenderRef ref="File"/>
        </Logger>

        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>